@page "/"
<MudText Typo="Typo.h4">Bienvenido a MoneyTracker</MudText>

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@SayHello">
    Presióname
</MudButton>

<MudSnackbarProvider />

@code {
